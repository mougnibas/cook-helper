<?xml version="1.0" encoding="UTF-8"?>
<server description="Cook Helper Recipe Microprofile">

	<!-- Enabled features -->
	<!-- Check Eclipse MicroProfile specification to know what to enable -->
	<featureManager>
		<feature>jaxrs-2.0</feature>
		<feature>cdi-1.2</feature>
		<feature>mpHealth-1.0</feature>
	</featureManager>

	<httpEndpoint host="*" httpPort="9080" httpsPort="9443"
		id="defaultHttpEndpoint" />
	<webApplication
		location="cook-helper-recipe-microprofile.war" contextRoot="/" />
</server>